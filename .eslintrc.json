{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "warnOnUnsupportedTypeScriptVersion": false,
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": false,
    "node": true,
    "es6": true,
    "mocha": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "max-len": ["error", { "code": 80 }],
    "curly": ["error"]
  }
}
