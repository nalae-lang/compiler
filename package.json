{
  "name": "nalae-compiler",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "lint": "eslint '*/**/*.ts' --quiet --fix",
    "test": "tsc && nyc mocha --opts tests/mocha-coverage.opts",
    "test:watch": "mocha --opts tests/mocha.opts --watch",
    "test:snapshot": "cross-env SNAPSHOT_UPDATE=1 yarn test",
    "test:web": "mocha --opts tests/mocha-web.opts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/chai": "^4.2.4",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^2.6.1",
    "@typescript-eslint/parser": "^2.6.1",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-mocha": "^6.2.1",
    "eslint-plugin-prettier": "3.1.1",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1",
    "prettier": "^1.19.1",
    "snap-shot-it": "^7.9.0",
    "source-map-support": "^0.5.13",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.2"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "cache": false,
    "include": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
