{
  "name": "@nalae-lang/compiler",
  "version": "0.1.0",
  "description": "나래 프로그래밍 언어 컴파일러",
  "main": "dist/index.js",
  "repository": "git://github.com/nalae-lang/compiler.git",
  "scripts": {
    "lint": "eslint \"*/**/*.ts\" --fix",
    "build": "tsc --build tsconfig.build.json",
    "test": "tsc && nyc mocha --opts tests/mocha-coverage.opts",
    "test:only": "mocha --opts tests/mocha.opts",
    "test:watch": "mocha --opts tests/mocha.opts --watch",
    "test:snapshot": "cross-env SNAPSHOT_UPDATE=1 yarn test"
  },
  "keywords": [
    "compiler",
    "nalae"
  ],
  "author": "tbvjaos510 <tbvjaos510@naver.com>",
  "license": "ISC",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "latest",
    "@types/mocha": "latest",
    "@typescript-eslint/eslint-plugin": "^2.17.0",
    "@typescript-eslint/parser": "^2.17.0",
    "chai": "^4.2.0",
    "cross-env": "^6.0.3",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "snap-shot-it": "^7.9.1",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.6.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.5"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "cache": false,
    "include": [
      "src/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "lcov"
    ]
  },
  "config": {
    "snap-shot-it": {
      "useRelativePath": true
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
